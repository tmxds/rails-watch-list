<h1><%= @list.name %></h1>

<p><%= link_to "Add a movie", new_list_bookmark_path(@list) %></p>

<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %> <%= link_to "[Delete]", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
  <p><%= bookmark.comment %></p>
<% end %>
